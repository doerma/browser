<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/colorBackground"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_above="@+id/home_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <GridView
            android:stackFromBottom="true"
            android:fastScrollEnabled="true"
            android:visibility="gone"
            android:padding="4dp"
            android:id="@+id/home_grid_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:numColumns="auto_fit">
        </GridView>

        <ListView
            android:stackFromBottom="true"
            android:fastScrollEnabled="true"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:visibility="gone"
            android:id="@+id/home_list_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
        </ListView>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shadow_above"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_buttons"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <ViewStub
            android:id="@+id/vs_dialog_collections_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_margin_56dp"
            android:layout_gravity="bottom"
            android:layout="@layout/dialog_collections_toolbar" />
        <ViewStub
            android:id="@+id/vs_dialog_collections_toolbar_rtl"
            android:layout="@layout/dialog_collections_toolbar_rtl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_margin_56dp"
            android:layout_gravity="bottom"/>
    </LinearLayout>

</RelativeLayout>