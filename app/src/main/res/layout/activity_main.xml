             android:layout_width="match_parent"
             android:layout_height="@dimen/layout_margin_56dp"/>

    </RelativeLayout>


    <include layout="@layout/activity_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/appBar"/>

    </RelativeLayout>
