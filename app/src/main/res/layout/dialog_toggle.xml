<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingVertical="4dp"
    android:paddingHorizontal="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    tools:ignore="ContentDescription" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:includeFontPadding="false"
        android:paddingVertical="4dp"
        android:ellipsize="end"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <View
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/colorButtonNormal" />

    <ScrollView
        android:id="@+id/toggle_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TextTheme_RadioGroup"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/default_Maggin_togglebar_8dp"
                android:paddingVertical="4dp">

                <RadioButton
                    android:id="@+id/button_Background_default"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="@string/text_default"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/color_dark"
                    android:background="@drawable/btn_webpagedefault_bg"
                    android:layout_marginEnd="4dp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/button_Background_green"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="@string/text_green"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/color_dark"
                    android:background="@drawable/btn_webpagegreen_bg"
                    android:layout_marginHorizontal="4dp"/>

                <RadioButton
                    android:id="@+id/button_Background_pink"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="@string/text_pink"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/color_dark"
                    android:background="@drawable/btn_webpagepink_bg"
                    android:layout_marginHorizontal="4dp"/>

                <RadioButton
                    android:id="@+id/button_Background_black"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="@string/text_black"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/color_light"
                    android:background="@drawable/btn_webpagedark_bg"
                    android:layout_marginStart="4dp"/>



            </RadioGroup>

            <View
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/colorButtonNormal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/default_Maggin_togglebar_8dp"
                android:paddingVertical="4dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/textzoomout"
                    android:layout_width="@dimen/layout_margin_16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_A"
                    android:textSize="10sp"
                    android:layout_gravity="center_horizontal"
                    android:background="?attr/selectableItemBackground"/>

                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/textzoom_seek_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    app:isb_track_progress_color="@color/color_blue"
                    app:isb_show_thumb_text="true"
                    app:isb_min="30"
                    app:isb_max="300"
                    app:isb_seek_smoothly="true"
                    app:isb_clear_default_padding="true"
                    android:paddingHorizontal="12dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/textzoomin"
                    android:layout_width="@dimen/layout_margin_16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_A"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:background="?attr/selectableItemBackground"/>
            </LinearLayout>

            <View
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/colorButtonNormal" />

            <HorizontalScrollView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/default_Maggin_togglebar_8dp"
                android:paddingVertical="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical|end">

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/toggle_adblock"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_block" />
                        <View
                            android:id="@+id/toggle_adblockView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/whitelist_ab"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_list" />


                        <View
                            android:id="@+id/toggle_adblockwhitelistview"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent"/>

                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_margin="3dp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/colorButtonNormal"/>

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/toggle_JavaScript"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_java" />

                        <View
                            android:id="@+id/toggle_JavaScriptView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/whitelist_Javascript"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_list" />



                        <View
                            android:id="@+id/toggle_JavaScripwhitelistview"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent"/>

                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_margin="3dp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/colorButtonNormal"/>

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/toggle_cookies"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_cookie" />
                        <View
                            android:id="@+id/toggle_cookiesView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="6dp"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/whitelist_cookies"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_list" />



                        <View
                            android:id="@+id/toggle_cookieswhitelistview"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent"/>

                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/default_Maggin_togglebar_8dp"
                android:paddingVertical="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical|end">


                    <LinearLayout
                        android:id="@+id/toggle_inverttheme"
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/toggle_invert"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_night" />

                        <View
                            android:id="@+id/toggle_invertView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/toggle_images"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_image" />
                        <View
                            android:id="@+id/toggle_imagesView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />


                    </LinearLayout>


                    <View
                        android:layout_width="0.5dp"
                        android:layout_margin="3dp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/colorButtonNormal"/>

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/toggle_desktop"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_desktop" />
                        <View
                            android:id="@+id/toggle_desktopView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />


                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_margin="3dp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/colorButtonNormal"/>

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/toggle_history"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_history" />
                        <View
                            android:id="@+id/toggle_historyView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/toggle_location"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_location" />
                        <View
                            android:id="@+id/toggle_locationView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="6dp"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/toggle_remote"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_remote" />
                        <View
                            android:id="@+id/toggle_remoteView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />

                    </LinearLayout>





                </LinearLayout>

            </HorizontalScrollView>
            <View
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/colorButtonNormal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:minHeight="46dp"
                android:paddingHorizontal="@dimen/default_Maggin_togglebar_8dp"
                android:paddingVertical="4dp">

                <TextView
                    android:id="@+id/toggle_tips"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/text_toggle_tips"
                    android:textColor="@color/primary_dark"
                    android:gravity="center_vertical"
                    android:layout_alignParentStart="true"
                    android:maxLines="1" />


                <Button
                    android:id="@+id/action_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:includeFontPadding="false"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="?android:attr/colorAccent"
                    android:text="@string/app_ok" />


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>


