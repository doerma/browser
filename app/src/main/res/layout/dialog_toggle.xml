            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/defaultMaggintogglebar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/toggle_adblock"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"

                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_block" />
                        <View
                            android:id="@+id/toggle_adblockView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="@color/color_red_light" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/toggle_JavaScrip"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_java" />

                        <View
                            android:id="@+id/toggle_JavaScriptView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="@color/color_red_light" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/toggle_cookies"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_cookie" />
                        <View
                            android:id="@+id/toggle_cookiesView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="@color/color_red_light" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/toggle_history"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_history" />
                        <View
                            android:id="@+id/toggle_historyView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/toggle_location"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_location" />
                        <View
                            android:id="@+id/toggle_locationView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical">

                         <ImageButton
                            android:id="@+id/toggle_images"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_image" />
                        <View
                            android:id="@+id/toggle_imagesView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/toggle_remote"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_remote" />
                        <View
                            android:id="@+id/toggle_remoteView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/toggle_inverttheme"
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="6dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/toggle_invert"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_night" />

                        <View
                            android:id="@+id/toggle_invertView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <View
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/colorButtonNormal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:minHeight="46dp"
                android:padding="@dimen/defaultMaggintogglebar">



                <LinearLayout

                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="42dp"
                        android:layout_height="2dp"
                        android:background="?android:attr/colorAccent"
                        android:visibility="invisible" />

                    <ImageButton
                        android:id="@+id/toggle_font"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:background="?attr/actionBarItemBackground"
                        android:src="@drawable/icon_settings" />

                </LinearLayout>

                <Button
                    android:id="@+id/action_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:includeFontPadding="false"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="?android:attr/colorAccent"
                    android:text="@string/dialog_toggle_reload"
                    android:layout_marginEnd="6dp"/>

                <Button android:id="@+id/action_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/action_ok"
                    android:includeFontPadding="false"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="?android:attr/colorAccent"
                    android:text="@string/dialog_toggle_instant"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>


