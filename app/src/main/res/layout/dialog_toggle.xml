<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    tools:ignore="ContentDescription" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:includeFontPadding="false"
        android:padding="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <View
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/colorButtonNormal" />

    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/defaultMaggintogglebar">

                <Button
                    android:id="@+id/button_Background_default"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="@string/text_default"
                    android:textColor="@color/color_dark"
                    android:background="@color/color_light"
                    android:layout_margin="4dp"/>

                <Button
                    android:id="@+id/button_Background_green"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="@string/text_green"
                    android:textColor="@color/color_dark"
                    android:background="@color/color_green"
                    android:layout_margin="4dp"/>

                <Button
                    android:id="@+id/button_Background_pink"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="@string/text_pink"
                    android:textColor="@color/color_dark"
                    android:background="@color/color_pink"
                    android:layout_margin="4dp"/>

                <Button
                    android:id="@+id/button_Background_black"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@color/color_dark"
                    android:text="@string/text_black"
                    android:textColor="@color/color_light" />


              </LinearLayout>

            <View
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/colorButtonNormal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/defaultMaggintogglebar">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A"
                    android:textSize="10sp"
                    android:layout_gravity="center"/>

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/textsize_seek_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="16"
                    app:bsb_second_track_color="@color/color_blue"
                    app:bsb_section_count="270"
                    app:bsb_show_thumb_text="true"
                    app:bsb_touch_to_seek="true"
                    app:bsb_min="30"
                    app:bsb_max="300"
                    app:bsb_seek_step_section="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <View
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/colorButtonNormal" />

            <!--doer deleted begin
