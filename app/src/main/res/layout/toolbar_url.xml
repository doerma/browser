<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_margin_56dp"
    android:visibility="gone"
    android:id="@+id/urlbar"
    android:orientation="horizontal">

    <AutoCompleteTextView
        android:id="@+id/main_omnibox_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/app_search_hint"
        android:selectAllOnFocus="true"
        android:completionThreshold="1"
        android:imeOptions="actionGo"
        android:inputType="textUri"
        android:text="@string/app_name"
        android:textColor="?android:attr/textColorPrimaryNoDisable"
        android:textColorHint="?android:attr/textColorHint"
        android:layout_toStartOf="@id/action_scan"
        android:paddingStart="10dp"
        android:background="?android:attr/colorBackground"/>
        />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/action_search_go"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_theme"
        app:srcCompat="@drawable/icon_arrow_right"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/action_search_chooseEngine"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/action_search_go"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_theme"
        app:srcCompat="@drawable/icon_format_list"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/action_scan"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_theme"
        app:srcCompat="@drawable/icon_fullscreen"
        android:layout_toStartOf="@id/action_search_chooseEngine"
        />
</RelativeLayout>