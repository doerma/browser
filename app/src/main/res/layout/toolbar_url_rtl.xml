<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_margin_56dp"
    android:id="@+id/urlbar"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="gone"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/app_search_hint"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textColorHint="?android:attr/textColorHint"
        android:layout_toEndOf="@id/action_search_chooseEngine"
        android:paddingStart="10dp"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/action_search_go"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_theme"
        app:srcCompat="@drawable/icon_arrow_right"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/action_search_chooseEngine"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/action_search_go"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_theme"
        app:srcCompat="@drawable/icon_format_list"

        />

</RelativeLayout>