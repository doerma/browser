<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="10dp"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/popupmenu_normalw"
            android:text="@string/mode_nameYCY"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingTop="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"

            android:textSize="16sp" />

        <include layout="@layout/popupmenuitem"
            android:id="@+id/mainmenu_itemW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popupmenu_normalw"/>

        <TextView
            android:id="@+id/popupmenu_quit"
            android:layout_below="@id/mainmenu_itemW"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/menu_quit"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popupmenu_quit"
            android:background="@color/finestBlack20"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/popupmenu_backw"
                android:layout_width="36dp"
                android:layout_height="42dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/ic_back" />

            <ImageButton
                android:id="@+id/popupmenu_search_websitew"
                android:layout_width="36dp"
                android:layout_height="42dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/ic_search" />

            <ImageButton
                android:id="@+id/popupmenu_overvieww"
                android:layout_width="36dp"
                android:layout_height="42dp"
                android:background="?attr/actionBarItemBackground"
                android:src="@drawable/icon_preview" />

            <ImageButton
                android:id="@+id/popupmenu_addBookmarkw"
                android:layout_width="36dp"
                android:layout_height="42dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/favorite_add_page" />

            <ImageButton
                android:id="@+id/popupmenu_forwardw"
                android:layout_width="36dp"
                android:layout_height="42dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/ic_forward" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
